
<h1>Welcome to your tasks manager</h1>

<%= link_to "Add new task", new_task_path(@task), class: "btn btn-light btn-lg" %>
<% @tasks.each do |task| %>
  <div class='border'>
  <h2><%= link_to task.title, task_path(task)%> <%= link_to task_path(task), method: "delete", data: {confirm: "Are you sure"},
  class: "link" do %>
    <i class="far fa-trash-alt"></i>
  <%end %>
  </h2>
  <p class="details"><%= task.details %></p>
  </div>
<% end %>
