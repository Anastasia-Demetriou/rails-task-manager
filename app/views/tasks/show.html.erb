
<h2><%= @task.title %></h2>
<p><%= @task.completed%></p>
<p><%= @task.details %></p>

<%= link_to "Back to all tasks", tasks_path %>
<p><%= link_to "Edit task", edit_task_path(@task) %></p>

<p><%= link_to "Update task", tasks_path%></p>

<p><%= @task.title %>

<% if @task.completed == true %>
  <p>Task is completed</p>
  <i class="far fa-check-square"></i>
<% else %>
  <p>Task not completed</p>
  <i class="far fa-square"></i>
<% end %>



